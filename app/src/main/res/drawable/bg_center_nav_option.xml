<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape  android:shape="oval">
            <padding
                android:top="3dp"/>
            <solid android:color="#1F000000" />
            <size
                android:width="170dp"
                android:height="170dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/blue" />
