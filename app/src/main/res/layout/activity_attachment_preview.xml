<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vm"
            type="id.thork.app.pages.attachment.element.preview.AttachmentPreviewViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBlack"
        tools:context=".pages.attachment.element.preview.AttachmentPreviewActivity">

        <ImageView
            android:id="@+id/iv_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/colorBlack"
            android:padding="@dimen/general_padding_5dp">

            <Button
                android:id="@+id/btn_save"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/ic_send_image" />

            <EditText
                android:id="@+id/et_attachment_caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/btn_save"
                android:hint="type to filter"
                android:inputType="text"
                android:maxLines="1" />
        </RelativeLayout>


    </RelativeLayout>
</layout>
