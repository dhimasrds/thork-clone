<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vm"
            type="id.thork.app.pages.labor_plan.element.LaborPlanViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/general_margin_10dp"
        tools:context=".pages.work_log.create_work_log.CreateWorkLogActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="@dimen/general_margin_15dp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <include
                android:id="@+id/toolbar"
                layout="@layout/toolbar" />
        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/general_margin_10dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/app_bar">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/general_margin_10dp"
                app:cardElevation="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_regular"
                    android:padding="@dimen/general_padding_5dp"
                    android:text="@string/task"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack"
                    android:textFontWeight="700"
                    android:textSize="21sp" />

                    <TextView
                        android:id="@+id/select_task"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:fontFamily="@font/roboto_regular"
                        android:padding="@dimen/general_padding_10dp"
                        android:text="@string/select_task"
                        android:textAllCaps="false"
                        android:textColor="@color/blue_nav"
                        android:drawablePadding="@dimen/general_padding_10dp"
                        android:drawableEnd="@drawable/ic_search_blue"
                        android:textFontWeight="500"
                        android:textSize="15sp" />
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/ic_line"
                    android:layout_marginBottom="@dimen/general_margin_5dp"
                    />

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginRight="@dimen/general_margin_5dp"
                    android:text="20 - Penambahan Kabel"
                    android:fontFamily="@font/roboto_regular"
                    android:padding="@dimen/general_padding_5dp"
                    android:textAllCaps="false"
                    android:textColor="@color/blue_nav"
                    android:textSize="@dimen/base_text_size_16" />
            </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/general_margin_10dp"
                app:cardElevation="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto_regular"
                            android:padding="@dimen/general_padding_5dp"
                            android:text="@string/labor"
                            android:textAllCaps="false"
                            android:textColor="@color/colorBlack"
                            android:textFontWeight="700"
                            android:textSize="21sp" />

                        <TextView
                            android:id="@+id/select_labor"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:fontFamily="@font/roboto_regular"
                            android:padding="@dimen/general_padding_10dp"
                            android:text="@string/select_labor"
                            android:textAllCaps="false"
                            android:textColor="@color/blue_nav"
                            android:drawablePadding="@dimen/general_padding_10dp"
                            android:drawableEnd="@drawable/ic_search_blue"
                            android:textFontWeight="500"
                            android:textSize="15sp" />
                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/ic_line"
                        android:layout_marginBottom="@dimen/general_margin_5dp"
                        />

                    <TextView
                        android:id="@+id/tv_labor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/general_margin_5dp"
                        android:text="Hendra"
                        android:fontFamily="@font/roboto_regular"
                        android:padding="@dimen/general_padding_5dp"
                        android:textAllCaps="false"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/base_text_size_16" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/general_margin_10dp"
                app:cardElevation="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto_regular"
                            android:padding="@dimen/general_padding_5dp"
                            android:text="@string/craft"
                            android:textAllCaps="false"
                            android:textColor="@color/colorBlack"
                            android:textFontWeight="700"
                            android:textSize="21sp" />

                        <TextView
                            android:id="@+id/select_craft"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:fontFamily="@font/roboto_regular"
                            android:padding="@dimen/general_padding_10dp"
                            android:text="@string/select_craft"
                            android:textAllCaps="false"
                            android:textColor="@color/blue_nav"
                            android:drawablePadding="@dimen/general_padding_10dp"
                            android:drawableEnd="@drawable/ic_search_blue"
                            android:textFontWeight="500"
                            android:textSize="15sp" />
                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/ic_line"
                        android:layout_marginBottom="@dimen/general_margin_5dp"
                        />

                    <TextView
                        android:id="@+id/tv_craft"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/general_margin_5dp"
                        android:text="Driver"
                        android:fontFamily="@font/roboto_regular"
                        android:padding="@dimen/general_padding_5dp"
                        android:textAllCaps="false"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/base_text_size_16" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/general_margin_10dp"
                app:cardElevation="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto_regular"
                            android:padding="@dimen/general_padding_5dp"
                            android:text="@string/skill_level"
                            android:textAllCaps="false"
                            android:textColor="@color/colorBlack"
                            android:textFontWeight="700"
                            android:textSize="21sp" />

                        <TextView
                            android:id="@+id/select_skill_level"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:fontFamily="@font/roboto_regular"
                            android:padding="@dimen/general_padding_10dp"
                            android:text="@string/select_skill_level"
                            android:textAllCaps="false"
                            android:textColor="@color/blue_nav"
                            android:drawablePadding="@dimen/general_padding_10dp"
                            android:drawableEnd="@drawable/ic_search_blue"
                            android:textFontWeight="500"
                            android:textSize="15sp" />
                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/ic_line"
                        android:layout_marginBottom="@dimen/general_margin_5dp"
                        />

                    <TextView
                        android:id="@+id/tv_skill_level"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/general_margin_5dp"
                        android:text="20 - Penambahan Kabel"
                        android:fontFamily="@font/roboto_regular"
                        android:padding="@dimen/general_padding_5dp"
                        android:textAllCaps="false"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/base_text_size_16" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/general_margin_10dp"
                app:cardElevation="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto_regular"
                            android:padding="@dimen/general_padding_5dp"
                            android:text="@string/vendor"
                            android:textAllCaps="false"
                            android:textColor="@color/colorBlack"
                            android:textFontWeight="700"
                            android:textSize="21sp" />
]                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/ic_line"
                        android:layout_marginBottom="@dimen/general_margin_5dp"
                        />

                    <TextView
                        android:id="@+id/tv_vendor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/general_margin_5dp"
                        android:text="THIS"
                        android:fontFamily="@font/roboto_regular"
                        android:padding="@dimen/general_padding_5dp"
                        android:textAllCaps="false"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/base_text_size_16" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_create"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/general_margin_12dp"
            android:layout_marginTop="@dimen/general_margin_12dp"
            android:layout_marginEnd="@dimen/general_margin_12dp"
            android:layout_marginBottom="@dimen/general_margin_12dp"
            android:background="@drawable/ic_rectangle_528"
            android:text="@string/general_save"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/content"
            app:layout_constraintVertical_bias="0.997" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>