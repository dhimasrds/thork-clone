<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="item"
            type="id.thork.app.persistence.entity.MaterialEntity" />
    </data>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_material"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:padding="@dimen/general_padding_5dp"
            android:layout_margin="@dimen/general_margin_4dp"
            app:cardCornerRadius="@dimen/general_margin_8dp"
            android:elevation="@dimen/general_margin_4dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_margin="@dimen/general_margin_5dp"
                android:background="@drawable/ripple_effect"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_material"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginRight="@dimen/general_margin_10dp"
                    android:src="@drawable/default_image"/>

                <TextView
                    android:id="@+id/materialnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:text="-"
                    android:textColor="@color/black"
                    android:textSize="@dimen/base_text_size_16" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

</layout>