<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/activity_login_hor_margin"
    android:layout_marginTop="@dimen/activity_login_ver_margin"
    android:layout_marginRight="@dimen/activity_login_hor_margin"
    android:orientation="vertical">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/ip_bg"
        android:elevation="2dp"
        app:endIconCheckable="true"
        app:endIconDrawable="@drawable/ic_ip_config1"
        app:endIconMode="custom"
        app:endIconTint="@color/colorAccent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ip_config"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/rectangle_white"
            android:drawableStart="@drawable/on_focus_ip"
            android:drawablePadding="10dp"
            android:fontFamily="@font/opensans_regular"
            android:hint="@string/server_address"
            android:inputType="textWebEditText"
            android:maxLines="1"
            android:shadowRadius="@android:integer/status_bar_notification_info_maxnum"
            android:textColorHint="@color/blue_nav"
            android:textSize="@dimen/base_text_size_14dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/ip_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="76dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/ic_rectangle_blue"
        android:fontFamily="@font/opensans_bold"
        android:text="@string/server_next"
        android:textAllCaps="false"
        android:textColor="@color/white" />
</LinearLayout>