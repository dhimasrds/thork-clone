<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:padding="@dimen/general_padding_10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_thumbnail"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/image_broken"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:padding="@dimen/general_padding_5dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_attachment_filename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Image_CAM001222.jpg" />
            <TextView
                android:id="@+id/tv_attachment_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Image_Description001" />
            <TextView
                android:id="@+id/tv_attachment_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Image_CAM001222" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>