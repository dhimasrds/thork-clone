<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="@dimen/general_padding_10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/general_margin_10dp"
        android:gravity="center">
        <View
            android:id="@+id/view"
            android:layout_width="60dp"
            android:layout_height="8dp"
            android:background="@drawable/rectangle_grey"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/general_margin_10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/general_margin_10dp"
            android:textSize="@dimen/base_text_size_16"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/wo_number"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/wo_tooltip_wonum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:textSize="@dimen/base_text_size_16"
            android:text="2214"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/wo_tooltip_asset_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/general_margin_10dp"
                android:fontFamily="@font/roboto_regular"
                android:textSize="@dimen/base_text_size_16"
                android:text="Hvac 2000"
                android:textColor="@color/black"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_asset"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/general_margin_10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/wo_tooltip_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/general_margin_10dp"
            android:fontFamily="@font/roboto_bold"
            android:textSize="@dimen/base_text_size_16"
            android:text="Hvac Service First"
            android:textColor="@color/black" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/wo_tooltip_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/general_margin_10dp"
                android:fontFamily="@font/roboto_regular"
                android:textSize="@dimen/base_text_size_16"
                android:text="Lantai 1"
                android:textColor="@color/black"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_location_marker"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/general_margin_10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/wo_tooltip_service_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxEms="12"
            android:minLines="1"
            android:maxLines="3"
            android:fontFamily="@font/roboto_regular"
            android:textSize="@dimen/base_text_size_16"
            android:layout_marginRight="@dimen/general_margin_10dp"
            android:text="Grand Slipi Tower, Jl. Letjen S. Parman, Palmerah, Kec. Palmerah"
            android:textColor="@color/black" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/wo_tooltip_priority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:layout_gravity="center"
                android:background="@drawable/rectangle_white_with_stroke"
                android:fontFamily="@font/roboto_regular"
                android:text="Normal"
                android:textColor="@color/blue_nav"
                android:textAllCaps="false"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/general_margin_20dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/wo_tooltip_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_rectangle_blue"
            android:layout_marginLeft="@dimen/general_padding_15dp"
            android:layout_marginRight="@dimen/general_padding_15dp"
            android:text="@string/see_detail"
            android:textSize="@dimen/base_text_size_16"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_bold"
            android:textAllCaps="false"
            />
    </LinearLayout>
</LinearLayout>