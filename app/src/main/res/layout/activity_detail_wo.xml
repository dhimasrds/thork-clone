<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="id.thork.app.pages.detail_wo.element.DetailWoViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".pages.detail_wo.DetailWoActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/app_bar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:gravity="center">

                <include
                    android:id="@+id/toolbar"
                    layout="@layout/toolbar" />
            </com.google.android.material.appbar.AppBarLayout>

            <ScrollView
                android:id="@+id/main_scrollview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/app_bar"
                android:layout_marginTop="-56dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary"
                    android:orientation="vertical"
                    android:padding="7dp">

                    <RelativeLayout
                        android:id="@+id/map_layout"
                        android:layout_width="match_parent"
                        android:layout_height="355dp">

                        <fragment
                            android:id="@+id/map"
                            android:name="com.google.android.gms.maps.SupportMapFragment"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="55dp" />

                        <id.thork.app.extensions.TransparantImageView
                            android:id="@+id/transparent_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:layout_marginTop="4dp">

                        <TextView
                            android:id="@+id/tvDistance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/wo_distance"
                            android:textSize="@dimen/text_size_wo_detail_16" />

                        <TextView
                            android:id="@+id/tvDuration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="18dp"
                            android:text="@string/wo_hours"
                            android:textSize="@dimen/text_size_wo_detail_16" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left_wo_detail"
                        android:fontFamily="@font/poppins"
                        android:text="@string/desc" />

                    <TextView
                        android:id="@+id/description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left_wo_detail"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="@font/poppins"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_size_wo_detail_16" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left_wo_detail"
                        android:fontFamily="@font/poppins"
                        android:text="@string/workorder" />

                    <TextView
                        android:id="@+id/wonum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left_wo_detail"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="@font/poppins"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_size_wo_detail_16" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left_wo_detail"
                        android:fontFamily="@font/poppins"
                        android:text="Status" />

                    <LinearLayout
                        android:id="@+id/bg_status"
                        android:layout_width="94dp"
                        android:layout_height="28dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/poppins"
                            android:paddingTop="2dp"
                            android:text="test"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/text_size_wo_detail_16" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left_wo_detail"
                        android:fontFamily="@font/poppins"
                        android:text="Priority" />

                    <TextView
                        android:id="@+id/priority"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left_wo_detail"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="@font/poppins"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_size_wo_detail_16" />

                    <!--Service Address-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left_wo_detail"
                        android:fontFamily="@font/poppins"
                        android:text="@string/service_address" />

                    <TextView
                        android:id="@+id/serviceaddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left_wo_detail"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="@font/poppins"
                        android:text="@string/line"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_size_wo_detail_20" />

                    <!--Location-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left_wo_detail"
                        android:fontFamily="@font/poppins"
                        android:text="@string/location" />

                    <TextView
                        android:id="@+id/location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left_wo_detail"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="@font/poppins"
                        android:text="@string/line"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_size_wo_detail_20" />

                    <!--Estimated work duration-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left_wo_detail"
                        android:fontFamily="@font/poppins"
                        android:text="@string/estimatedwork" />

                    <TextView
                        android:id="@+id/estimated_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left_wo_detail"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="@font/poppins"
                        android:text="@string/line"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_size_wo_detail_20" />

                    <!--LongDesc-->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/longdesc"
                        android:layout_width="match_parent"
                        android:layout_height="72dp"
                        android:layout_marginLeft="@dimen/margin_left_wo_detail"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="@dimen/menu_wo_margin_bottom"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="8dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/ic_note_black_24dp" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="7"
                                android:text="@string/Note" />

                            <TextView
                                android:id="@+id/total_desc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:src="@drawable/ic_arrow_next" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!--Attachment-->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/attachment"
                        android:layout_width="match_parent"
                        android:layout_height="72dp"
                        android:layout_marginLeft="@dimen/margin_left_wo_detail"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="@dimen/menu_wo_margin_bottom"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="8dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/ic_image_wo" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="7"
                                android:layout_marginLeft="5dp"
                                android:text="@string/image" />

                            <TextView
                                android:id="@+id/total_foto"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:src="@drawable/ic_arrow_next" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!--Scan QR-->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/scan_qr"
                        android:layout_width="match_parent"
                        android:layout_height="72dp"
                        android:layout_marginLeft="@dimen/margin_left_wo_detail"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="@dimen/menu_wo_margin_bottom"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="8dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/ic_scan_qr" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="7"
                                android:text="@string/wo_scan_material" />

                            <TextView
                                android:id="@+id/total_qr"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:src="@drawable/ic_arrow_next" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!--REPORT DATE-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left_wo_detail"
                        android:fontFamily="@font/poppins"
                        android:text="@string/reportDate" />

                    <TextView
                        android:id="@+id/report_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left_wo_detail"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="@font/poppins"
                        android:text="@string/line"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_size_wo_detail_20" />

                    <!--MARGIN-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="90dp"></LinearLayout>

                    <!--Button Wo Update-->
                    <RelativeLayout
                        android:id="@+id/layout_status"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="bottom">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="72dp"
                            android:background="@color/white"
                            android:gravity="bottom"
                            android:orientation="horizontal"
                            android:padding="16dp">

                            <ImageView
                                android:id="@+id/btn_status_wo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/ic_rectangle_long"
                                android:clickable="true"
                                android:foreground="?android:attr/selectableItemBackground" />

                            <ImageView
                                android:id="@+id/btn_more"
                                android:layout_width="69dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:background="@drawable/ic_rectangle_small"
                                android:paddingTop="8dp"
                                android:paddingBottom="8dp"
                                android:src="@drawable/ic_more" />

                            <TextView
                                android:id="@+id/text_status"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="69dp"
                                android:fontFamily="@font/poppins"
                                android:gravity="center"
                                android:text="@string/lines"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_wo_detail_16" />
                        </RelativeLayout>
                    </RelativeLayout>
                </LinearLayout>
            </ScrollView>

        </RelativeLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>