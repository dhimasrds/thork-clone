<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/bg_wms">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo1"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginLeft="76dp"
            android:layout_marginTop="32dp"
            android:layout_marginRight="76dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/wms_walktrough_3" />

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_above="@id/description1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layout_margin_welcome_layout"
                android:src="@drawable/ic_dot_blue" />
            <ImageView
                android:layout_margin="@dimen/layout_margin_welcome_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_dot"/>
            <ImageView
                android:layout_margin="@dimen/layout_margin_welcome_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_dot"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="50dp"
            android:weightSum="3"
            android:background="@drawable/bg_base_intro"
            android:orientation="vertical">

            <TextView
                android:layout_weight="1"
                android:id="@+id/description1"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                android:gravity="center_vertical"
                android:fontFamily="@font/opensans_bold"
                android:textStyle="bold"
                android:text="Realtime Workorder"
                tools:ignore="RtlCompat" />
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:fontFamily="@font/opensans_regular"
                android:text="@string/layout_welcome_3"
                android:textColor="@color/colorBlack"
                android:textAlignment="center"
                android:gravity="center_vertical"
                android:textSize="12sp"
                tools:ignore="RtlCompat" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
