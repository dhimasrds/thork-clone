<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="@dimen/general_padding_10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/general_margin_10dp"
        android:gravity="center">
        <View
            android:id="@+id/view"
            android:layout_width="60dp"
            android:layout_height="8dp"
            android:background="@drawable/rectangle_grey"
          />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/general_margin_10dp"
        android:orientation="horizontal">

      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginRight="@dimen/general_margin_10dp"
          android:src="@drawable/ic_location_marker"/>

        <TextView
            android:id="@+id/location_tooltip_desc"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:gravity="center"
            android:fontFamily="@font/roboto_regular"
            android:textSize="@dimen/base_text_size_16"
            android:text="Kantor Talian Lantai B"

            />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/general_margin_10dp"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/general_margin_10dp"
            android:src="@drawable/ic_maps_marker"/>
        <TextView
            android:id="@+id/location_tooltip_service_Address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxEms="15"
            android:minLines="1"
            android:maxLines="3"
            android:layout_marginRight="@dimen/general_margin_10dp"
            android:fontFamily="@font/roboto_regular"
            android:textSize="@dimen/base_text_size_16"
            android:text="Jl. Letjen S. Parman No.Kav. 38- 39, RW.3, Kemanggisan, Kec. Palmerah, Kota Jakarta Barat, Daerah Khusus Ibukota Jakarta 11480"   android:textColor="@color/black" />



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/general_margin_20dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/location_tooltip_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_rectangle_blue"
            android:layout_marginLeft="@dimen/general_padding_15dp"
            android:layout_marginRight="@dimen/general_padding_15dp"
            android:text="@string/create_work_order"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_bold"
            android:textAllCaps="false"
            />
    </LinearLayout>
</LinearLayout>